<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage
    x:Class="MapNotePad.Views.PinsListPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MapNotePad.Controls"
    xmlns:localization="clr-namespace:MapNotePad.Resources"
    xmlns:prism="http://prismlibrary.com"
    xmlns:views="clr-namespace:MapNotePad.Views">

    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Double x:Key="ButtonSize">100</x:Double>
            <x:Int32 x:Key="CornerRadius">50</x:Int32>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding DisableMenuCommand}" />
        </Grid.GestureRecognizers>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" BackgroundColor="#2196F3">

            <Image
                Grid.Row="0"
                Margin="35,0"
                HeightRequest="20"
                HorizontalOptions="Start"
                Source="search.png"
                VerticalOptions="Center"
                WidthRequest="20" />

            <controls:CommonEntry
                Margin="60,0"
                BackgroundColor="WhiteSmoke"
                CornerRadius="15"
                FontSize="15"
                HeightRequest="30"
                HorizontalOptions="Start"
                Placeholder="search"
                Text="{Binding SearchBar}"
                TextColor="Black"
                VerticalOptions="Center"
                WidthRequest="200" />

            <!--</Frame>-->

            <controls:NavBarProfileButton
                Margin="0,0,5,0"
                Padding="0"
                BackgroundColor="LightGray"
                Command="{Binding ShowMenuCommand}"
                CornerRadius="20"
                FirstName="{Binding FirstName}"
                FontSize="14"
                HeightRequest="40"
                HorizontalOptions="End"
                LastName="{Binding LastName}"
                TextColor="Black"
                VerticalOptions="Center"
                WidthRequest="40" />

        </Grid>

        <ListView
            x:Name="profilesListView"
            Grid.Row="1"
            HasUnevenRows="True"
            HorizontalOptions="FillAndExpand"
            InputTransparent="False"
            ItemsSource="{Binding Pins}"
            SelectionMode="None"
            SeparatorVisibility="None"
            VerticalOptions="Fill">

            <ListView.Behaviors>
                <prism:EventToCommandBehavior
                    Command="{Binding CellTappedCommand}"
                    EventArgsParameterPath="Item"
                    EventName="ItemTapped" />
            </ListView.Behaviors>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell x:Name="Cell">
                        <ViewCell.ContextActions>

                            <MenuItem
                                Command="{Binding BindingContext.EditPinModelCommand, Source={x:Reference profilesListView}}"
                                CommandParameter="{Binding .}"
                                Text="{x:Static localization:Resource.PinsListMenuItemEdit}" />

                            <MenuItem
                                Command="{Binding BindingContext.DeletePinCommand, Source={x:Reference profilesListView}}"
                                CommandParameter="{Binding .}"
                                Text="{x:Static localization:Resource.PinsListMenuItemDelete}" />

                        </ViewCell.ContextActions>

                        <ViewCell.View>
                            <Grid Padding="5,5" HeightRequest="65">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>

                                <StackLayout Grid.Column="1" Orientation="Vertical">

                                    <Label
                                        FontAttributes="Bold"
                                        Text="{Binding Name}"
                                        TextColor="Black" />

                                    <Label Text="{Binding Longtitude}" TextColor="Black" />

                                    <Label Text="{Binding Latitude}" TextColor="Black" />
                                </StackLayout>

                                <Button
                                    Grid.Column="0"
                                    BackgroundColor="White"
                                    Command="{Binding BindingContext.ChangeStatusPinCommand, Source={x:Reference profilesListView}}"
                                    CommandParameter="{Binding .}"
                                    ImageSource="star.png">
                                    <Button.Triggers>

                                        <DataTrigger
                                            Binding="{Binding IsActive}"
                                            TargetType="Button"
                                            Value="True">
                                            <Setter Property="Opacity" Value="1" />
                                        </DataTrigger>

                                        <DataTrigger
                                            Binding="{Binding IsActive}"
                                            TargetType="Button"
                                            Value="False">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </DataTrigger>

                                    </Button.Triggers>
                                </Button>
                            </Grid>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <controls:SlideFramePinsPage
            Grid.Row="1"
            Margin="0,0,-145,0"
            BackgroundColor="White"
            BorderColor="#2196F3"
            CornerRadius="20"
            HasShadow="False"
            HeightRequest="40"
            HorizontalOptions="End"
            IsActive="{Binding IsActiveFrame}"
            VerticalOptions="Start"
            WidthRequest="100">

            <StackLayout
                HorizontalOptions="Start"
                Orientation="Vertical"
                Spacing="10"
                VerticalOptions="Start">

                <Label
                    FontAttributes="Bold"
                    FontSize="15"
                    Text="LogOut"
                    TextColor="#2196F3">

                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LogOutCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

        </controls:SlideFramePinsPage>

        <Button
            Grid.Row="1"
            Margin="40"
            BackgroundColor="{DynamicResource BtnAddColor}"
            BorderColor="{DynamicResource BtnAddBorder}"
            BorderWidth="5"
            Command="{Binding AddNewPinCommand}"
            CornerRadius="{StaticResource Key=CornerRadius}"
            Font="60"
            FontAttributes="Bold"
            HeightRequest="{StaticResource Key=ButtonSize}"
            HorizontalOptions="End"
            Text="{x:Static localization:Resource.PinsListAddProffButton}"
            TextColor="{DynamicResource BtnAddText}"
            VerticalOptions="End"
            WidthRequest="{StaticResource Key=ButtonSize}" />


    </Grid>


</views:BaseContentPage>